<form action="/libros/edit?book_id={{libro._id}}" method="POST">
  <label for="titulo">Título:</label>
  <input type="text" name="title" value="{{libro.title}}" placeholder="Título del libro">
  <br>
  <label for="autor"> Autor:</label>
  <input type="text" name="author" value="{{libro.author}}" placeholder="Autor del libro">
  <br>
  <label for="description"> Descripción:</label>
  <input type="text" name="description" value="{{libro.description}}" placeholder="Descripcion">
  <br>
  <label for="rating">Calificación:</label>
  <input type="number" name="rating" value="{{libro.rating}}" placeholder="Rating">
  <br>
  <button type="submit" name="button">EDIT</button>
</form>