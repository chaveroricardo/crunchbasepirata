<h1>Libros</h1>
<form action="/buscar" method="post">
  <label for="books">Buscar</label>
  <input type="text" name="books" value="" placeholder="Buscar un libro">
  <button type="submit" name="button">Buscar</button>
</form>
<div>
  <table>
    <tr>
      <th>Nombre</th>
      <th>URL</th>
    </tr>
    {{#each books}}
    <tr>
      <td><a href="/libros/{{this._id}}">{{this.name}}</a></td>
      <td> <a href="{{this.homepage_url}}">{{this.homepage_url}}</a></td>
    </tr>
    {{/each}}
  </table>
</div>